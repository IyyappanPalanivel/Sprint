<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/vertical_spacing">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/gradient_circle"/>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/vertical_spacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Transfer"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfull"
            android:fontFamily="@font/poppins"
            android:textColor="#404B52"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05 May, 10 : 57 pm"
            android:fontFamily="@font/poppins"
            android:textColor="#404B52"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>